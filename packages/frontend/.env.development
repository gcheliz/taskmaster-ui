# TaskMaster UI Development Environment
# This file contains development-specific environment variables
# These are safe to commit as they don't contain sensitive information

# Application Environment
VITE_TASKMASTER_NODE_ENV=development

# API Configuration
VITE_TASKMASTER_API_BASE_URL=http://localhost:3001
VITE_TASKMASTER_API_TIMEOUT=30000

# WebSocket Configuration
VITE_TASKMASTER_WS_URL=ws://localhost:3001
VITE_TASKMASTER_WS_RECONNECT_DELAY=5000

# Security Configuration - More lenient for development
VITE_TASKMASTER_ENABLE_CSP=true
VITE_TASKMASTER_ENABLE_RATE_LIMITING=true
VITE_TASKMASTER_RATE_LIMIT_MAX_ATTEMPTS=100
VITE_TASKMASTER_RATE_LIMIT_WINDOW_MS=900000

# Development Configuration
VITE_TASKMASTER_ENABLE_DEBUG=true
VITE_TASKMASTER_ENABLE_SOURCE_MAPS=true
VITE_TASKMASTER_ENABLE_DEV_TOOLS=true

# Feature Flags
VITE_TASKMASTER_ENABLE_NOTIFICATIONS=true
VITE_TASKMASTER_ENABLE_THEME_TOGGLE=true
VITE_TASKMASTER_ENABLE_DRAG_DROP=true

# Repository Configuration
VITE_TASKMASTER_MAX_REPOSITORIES=50
VITE_TASKMASTER_MAX_PROJECTS_PER_REPO=10

# Task Configuration
VITE_TASKMASTER_MAX_TASKS_PER_PROJECT=5000
VITE_TASKMASTER_AUTO_SAVE_INTERVAL=10000

# File Upload Configuration
VITE_TASKMASTER_MAX_FILE_SIZE=10485760
VITE_TASKMASTER_ALLOWED_FILE_TYPES=txt,md,json,log